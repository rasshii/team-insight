# アプリケーション設定
# フロントエンドのURL
NEXT_PUBLIC_APP_URL=http://localhost

# バックエンドAPIのベースURL
NEXT_PUBLIC_API_URL=http://localhost

# 機能フラグ
# アナリティクス機能の有効化
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# デバッグパネルの有効化（開発環境のみ推奨）
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=false

# Backlog OAuth設定
NEXT_PUBLIC_BACKLOG_CLIENT_ID=your-client-id-here
NEXT_PUBLIC_BACKLOG_REDIRECT_URI=http://localhost/auth/callback
NEXT_PUBLIC_BACKLOG_SPACE_NAME=nulab-exam

# 認証設定
# メール/パスワード認証の有効化（false推奨）
NEXT_PUBLIC_ENABLE_EMAIL_AUTH=false

# ログインモード
# - backlog-only: Backlog認証のみ（推奨）
# - hybrid: Backlog認証とメール認証の両方
# - migration: 移行期間中（メール認証は既存ユーザーのみ）
NEXT_PUBLIC_LOGIN_MODE=backlog-only
