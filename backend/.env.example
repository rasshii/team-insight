# データベース接続URL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/team_insight

# Redis接続URL
REDIS_URL=redis://redis:6379
REDISCLI_AUTH=redis_password

# セキュリティキー（本番環境では必ず変更してください）
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# デバッグモード
DEBUG=True

# Backlog OAuth設定
BACKLOG_CLIENT_ID=your-client-id-here
BACKLOG_CLIENT_SECRET=your-client-secret-here
BACKLOG_REDIRECT_URI=http://localhost:3000/auth/callback
BACKLOG_SPACE_KEY=your-space-key-here


# キャッシュ設定
CACHE_DEFAULT_EXPIRE=300
CACHE_MAX_CONNECTIONS=20
CACHE_HEALTH_CHECK_INTERVAL=30
